{
  "compilerOptions": {
    "lib": ["es2021", "dom"],
    "outDir": "dist",
    "removeComments": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "moduleResolution": "node",
    // Source Map
    "sourceMap": true,
    "sourceRoot": "/",
    // Strict Checks
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    // Linter Checks
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules/**/*"]
}
